{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "ordered-imports": true,
    "import-spacing": true,
    "no-console": {
      "severity": "warning"
    },
    "no-debugger": {
      "severity": "warning"
    },
    "max-classes-per-file": false,
    "object-literal-sort-keys": false,
    "member-access": [
      true,
      "no-public"
    ],
    "radix": false,
    "prefer-for-of": false
  }
}
